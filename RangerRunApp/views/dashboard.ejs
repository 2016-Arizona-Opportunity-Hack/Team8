<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Run Ranger Run</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<link rel="stylesheet" href="CSS/dashboard.css">
</head>
<body>
	<nav class="navbar navbar-inverse">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" data-name = "<%= user.name %>" href="#"><%= user.name %></a>
			</div>
			<ul class="nav navbar-nav">
				<li><a href="#">Profile Settings</a><li>
				<li><a id = "team-name" href="#">Team</a></li>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
			</ul>
		<!-- End of container for nav -->
		</div>
	</nav>

	<div class="container">
		<div class="page-header text-center">
			<h1><span class="fa fa-anchor">Welcome Ranger</span></h1>
		</div>
		<canvas id="canvas" width="400" height="100"></canvas>
		<div class="row">
			<!-- LOCAL INFORMATION -->
			<div class="col-lg-6 well">
				<h3 class="text-center"> Log your miles</h3>
		    <form>
		      <div class="form-group">
		        <label for="activity-input">Activity</label>
		        <input type="text" class="form-control" id="activity-input">
		      </div>
		      <div class="form-group">
		        <label for="miles-input">Miles</label>
		        <input type="number" class="form-control" id="miles-input" value="0" min="0">
		      </div>
		      <div class="form-group">
		        <input type="submit" class="form-control" value="Submit" >
		      </div>
		    </form>
		  </div>

				<div class="col-lg-6 team-section">
					<!-- This section will contain team information -->
					<div class="default-loading">
						<img src = "../Contents/Images/loading.gif"></img>
					</div>
					<div class="team-present">
						<h3 class="text-center"> Your Team <br> <small> TEAM NAME</small></h3>
						<table class="table table-boarder">
						<thead>
							<tr>
								<th>Position</th>
								<th> Name </th>
								<th> Miles </th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td> 1 </td>
								<td> Nick </td>
								<td> 10 </td>
							</tr>
							<tr>
								<td> 2 </td>
								<td> Bob </td>
								<td> 5 </td>
							</tr>
							<tr>
								<td> 3 </td>
								<td> Mike </td>
								<td> 1 </td>
							</tr>
						</tbody>
					</table>
				</div>
				<div class="team-not">
					<h3 class="text-center">You Haven't Joined a Team Yet</h3>
					<h3>Search for a team</h3>
					<div id="custom-search-input">
							<div class="input-group col-md-12">
									<input type="text" class="form-control input-lg" placeholder="Team Name" />
									<span class="input-group-btn">
											<button class="btn btn-info btn-lg" type="button">
													<i class="glyphicon glyphicon-search"></i>
											</button>
									</span>
							</div>
					</div>
				</div>
				</div>


			</div>
		</div>
	</div>
	<script src="js/jquery.js"></script>
	<!-- Latest compiled JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

	<script src="js/Chart.min.js"></script>
	<script src="js/ResponseHandlerHub.js"></script>
	<script src="js/common.js"></script>
	<script src="js/profile.js"></script>
	<script>populatePage(<%- JSON.stringify(user) %>)</script>
</body>
</html>
